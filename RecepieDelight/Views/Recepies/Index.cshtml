@model IEnumerable<RecepieDelight.Models.Recepie>

@{
    //ViewData["Title"] = "Recipes";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var pageTitle = ViewData["Title"] as string;
}
<h1>@pageTitle</h1>


<p>
    <a asp-action="Create"><button type="button" class="btn btn-outline-success">Create New Recipe</button></a>
    
</p>


<h1 style="color:black;"></h1>
@foreach (var item in Model)
{
    <div class="article-container">
        <div class="eventsInfo">
            <img src="~/img/avocado-toast.jpg" width="100" height="100">
            <h4 class="title">  @Html.DisplayFor(modelItem => item.Title)</h4>
            <h6 class="complexity">  @Html.DisplayFor(modelItem => item.complexity)</h6>
            <h6 class="preparationTime">  @Html.DisplayFor(modelItem => item.preparationTime)</h6>

            <a asp-action="Edit" asp-route-id="@item.Id"><button type="button" class="btn btn-primary">Edit</button></a> |
            <a asp-action="Details" asp-route-id="@item.Id"><button type="button" class="btn btn-info">Details</button></a> |
            <a asp-action="Delete" asp-route-id="@item.Id"><button type="button" class="btn btn-danger">Delete</button></a>
        </div>
    </div>
}

